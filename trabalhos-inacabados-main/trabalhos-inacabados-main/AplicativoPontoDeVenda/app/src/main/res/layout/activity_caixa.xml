<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-77dp"
        android:scaleType="centerCrop"
        android:src="@drawable/Shop" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciamento de Vendas"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código do Produto"
        android:inputType="text"
        android:layout_below="@+id/txtTitulo"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextQuantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantidade"
        android:inputType="number"
        android:layout_below="@+id/editTextCodigo"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor Unitário"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editTextQuantidade"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonAdicionar"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:text="Adicionar Produto"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/editTextValor"
        android:layout_marginTop="16dp" />

    <RelativeLayout
        android:id="@+id/layoutReceberPagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAdicionar"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total a Pagar:"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtTotalPagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 0.00"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonReceberPagamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receber Pagamento"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/buttonFinalizar"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:text="Finalizar Venda"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/layoutReceberPagamento"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonGerarNotaFiscal"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:text="Gerar Nota Fiscal"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/buttonFinalizar"
        android:layout_marginTop="16dp" />

</RelativeLayout>