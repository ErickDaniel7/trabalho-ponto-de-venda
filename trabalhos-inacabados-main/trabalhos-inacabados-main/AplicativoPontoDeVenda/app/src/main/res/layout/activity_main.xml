<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".view.MainActivity">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-77dp"
        android:scaleType="centerCrop"
        android:src="@drawable/Shop" />

    <ImageView
        android:id="@+id/imageViewBackground2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="406dp"
        android:scaleType="centerCrop"
        android:src="@drawable/Ponto" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:text="Ponto de Venda Móvel"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/buttonIrCaixa"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/black"
        android:text="Ir ao Caixa"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonCadastrarPedido"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/buttonIrCaixa"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Cadastrar Pedido"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/buttonExibirLogin"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@id/buttonIrCaixa"
        android:layout_marginTop="-384dp"
        android:layout_marginLeft="320dp"
        android:backgroundTint="@color/black"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonExibirRelatorio"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/buttonIrCaixa"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="220dp"
        android:backgroundTint="@color/black"
        android:text="Exibir Relatório"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>
